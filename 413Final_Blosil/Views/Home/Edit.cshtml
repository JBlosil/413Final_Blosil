@model Entertainer

@{
    ViewData["Title"] = "Edit Entertainer";
}

<h2>Edit Entertainer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EntertainerID" />
    <div class="form-group">
        <label asp-for="EntStageName" class="control-label"></label>
        <input asp-for="EntStageName" class="form-control" placeholder="Current: @Model.EntStageName" />
    </div>
    <div class="form-group">
        <label asp-for="EntSsn" class="control-label"></label>
        <input asp-for="EntSsn" class="form-control" placeholder="Current: @Model.EntSsn" />
    </div>
    <div class="form-group">
        <label asp-for="EntStreetAddress" class="control-label"></label>
        <input asp-for="EntStreetAddress" class="form-control" placeholder="Current: @Model.EntStreetAddress" />
    </div>
    <div class="form-group">
        <label asp-for="EntCity" class="control-label"></label>
        <input asp-for="EntCity" class="form-control" placeholder="Current: @Model.EntCity" />
    </div>
    <div class="form-group">
        <label asp-for="EntState" class="control-label"></label>
        <input asp-for="EntState" class="form-control" placeholder="Current: @Model.EntState" />
    </div>
    <div class="form-group">
        <label asp-for="EntZipCode" class="control-label"></label>
        <input asp-for="EntZipCode" class="form-control" placeholder="Current: @Model.EntZipCode" />
    </div>
    <div class="form-group">
        <label asp-for="EntPhoneNumber" class="control-label"></label>
        <input asp-for="EntPhoneNumber" class="form-control" placeholder="Current: @Model.EntPhoneNumber" />
    </div>
    <div class="form-group">
        <label asp-for="EntWebPage" class="control-label"></label>
        <input asp-for="EntWebPage" class="form-control" placeholder="Current: @Model.EntWebPage" />
    </div>
    <div class="form-group">
        <label asp-for="EntEmailAddress" class="control-label"></label>
        <input asp-for="EntEmailAddress" class="form-control" placeholder="Current: @Model.EntEmailAddress" />
    </div>
    <div class="form-group">
        <label asp-for="DateEntered" class="control-label"></label>
        <input asp-for="DateEntered" class="form-control" type="date" placeholder="Current: @Model.DateEntered?.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
