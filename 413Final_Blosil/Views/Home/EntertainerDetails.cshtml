@model Entertainer

@{
    ViewData["Title"] = "Entertainer Details";
}

<div class="card m-1 p-1">
    <h4>@Model.EntStageName
        <span class="float-end">
            <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.EntertainerID">Edit</a>
            <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.EntertainerID">Delete</a>
        </span>
    </h4>
        
    <ul>
        <li>ID: @Model.EntertainerID</li>
        <li>Entertainer SSN: @Model.EntSsn</li>
        <li>Entertainer Street Address: @Model.EntStreetAddress</li>
        <li>Entertainer City: @Model.EntCity</li>
        <li>Entertainer State: @Model.EntState</li>
        <li>Entertainer Zip: @Model.EntZipCode</li>
        <li>Entertainer Phone Number: @Model.EntPhoneNumber</li>
        <li>Entertainer Web Page: @Model.EntWebPage</li>
        <li>Entertainer Email: @Model.EntEmailAddress</li>
        <li>Entertainer Entered Date: @Model.DateEntered</li>
    </ul>
</div>
